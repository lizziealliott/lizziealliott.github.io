{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lizziealliott/lizziealliott.github.io/main/proj_rim.csv"
  },
  "config": {"background": "rgb(250, 243, 250)", "view": {"stroke": "transparent"}},
  "title": {
    "text": "Infant Mortality Rates and Race of Mother 1995-2018",
    "subtitle": "Source: CDC API & Fred API",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "navy"
  },
  "width": 500,
  "height": 340,
  "transform": [
    {"calculate": "year(datum.Year)", "as": "year"},
    {"filter": "datum.year>=minYear"},
    {"filter": "datum.year<=maxYear"}
  ],
  "params": [
    {
      "name": "minYear",
      "value": 1995,
      "bind": {
        "input": "range",
        "min": 1995,
        "max": 2017,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2018,
      "bind": {
        "input": "range",
        "min": 1996,
        "max": 2018,
        "step": 1,
        "name": "End year:"
      }
    }
  ],
  "mark": {"type": "line", "strokeWidth": 2.5},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },
    "y": {
      "field": "Value",
      "type": "quantitative",
      "title": "Infant Mortality Rate (%)",
      "axis": {"grid": false},
      "scale": {"domain": [3, 37]}
    },
    "color": {
      "field": "Name",
      "scale": {
        "range": [
          "rgb(0, 113, 225)",
          "rgb(0, 65, 130)",
          "purple",
          "pink",
          "#d50d60",
          "red",
          "#c10dd5"
        ]
      },
      "legend": {"orient": "top-right", "title": null, "labelFontSize": 10}
    },
    "tooltip": [
      {"field": "Year", "type": "temporal", "title": "Year"},
      {"field": "Name", "type": "nominal", "title": "Mother"},
      {"field": "Value", "type": "quantitative", "title": "Rate (%)"}
    ]
  }
}